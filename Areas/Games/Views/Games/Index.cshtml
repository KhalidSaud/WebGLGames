@model IEnumerable<Game>
@{
    ViewData["Title"] = "Index";
}

@if (Model.Count() > 0)
{
    @foreach (var item in Model)
    {
    <div class="row">
        <p>@item.Id </p>
        <p>@item.Name </p>
        <p>@item.ReleaseName </p>
        <p>@item.ReleaseNameDotJson </p>
        <a asp-area="Games" asp-controller="Games" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
    </div>
    }
}
else
{
    <p>No games available...</p>
}


