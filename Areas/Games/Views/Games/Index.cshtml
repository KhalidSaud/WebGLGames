@model IEnumerable<Game>

@{
    ViewData["Title"] = "Index";
}


@if (Model.Count() > 0)
{
    @foreach (var game in Model)
    {

        <div class="row">
            <p>@game.User.Name </p>
            <p>@game.Id </p>
            <p>@game.Name </p>
            <p>@game.ReleaseName </p>
            <p>@game.ReleaseNameDotJson </p>
            <a asp-area="Games" asp-controller="Games" asp-action="Edit" asp-route-id="@game.Id" class="btn btn-success">Edit</a>
            <a asp-action="Delete" asp-route-id="@game.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
        </div>

    }
}
else
{
    <p>No games available...</p>
}

